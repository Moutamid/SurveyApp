<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="12dp"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:text="Ich versuche zu verstehen, wie ein technisches System genau funktioniert."
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/black"/>

        <RadioGroup
            android:id="@+id/radioGroupOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButtonOption1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Stimmt gar nicht"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:buttonTint="#FF0000"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/radioButtonOption2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:buttonTint="#FFA500"
                android:text="Stimmt weit-gehend nicht"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/radioButtonOption3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Stimmt eher nicht"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:buttonTint="#FFD700"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/radioButtonOption4"
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:buttonTint="#ADFF2F"
                android:layout_height="40dp"
                android:text="Stimmt eher"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/radioButtonOption5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Stimmt weitgehend"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:buttonTint="#008000"
                android:onClick="onRadioButtonClicked"/>
  <RadioButton
                android:id="@+id/radioButtonOption6"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Stimmt weitgehend"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:buttonTint="#008000"
                android:onClick="onRadioButtonClicked"/>


        </RadioGroup>

    </LinearLayout>

</androidx.cardview.widget.CardView>
